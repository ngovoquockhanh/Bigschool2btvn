@model IEnumerable<BigSchool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">

    <ul class="course" style="margin-top:30px">
        @foreach (var Course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @Course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @Course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @Course.Name
                    </span>
                    <span class="category">
                        @Course.Category.Name
                    </span>
                    <button data-course-id="@Course.Id" class="btn btn-default btn-sm js-tongle-attendance ">Going?</button>
                </div>
            </li>
        }
    </ul>
    @section scripts{
        <script>
            $(document).ready(function () {
                $(".js-tongle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/attendances", { Id: button.attr("data-course-id") })
                        .done(function () {
                            alert("Register course sucessfully!")
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going");
                        }).fail(function () {
                            alert("Something fail");
                        });
                });
            });
        </script> }

</div>

